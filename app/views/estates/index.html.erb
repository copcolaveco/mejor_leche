<h1>Predios</h1>
 
<table class="table table table-hover table table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Nombre</th>
      <th>Dicose</th>
      <th>Productor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estates.each do |estate| %>
      <tr>
        <td><%= estate.name %></td>
        <td><%= estate.dicose %></td>
        <td><%= estate.user.username %></td>
        <td><%= link_to 'Ver', estate, class:"btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Editar', edit_estate_path(estate), class:"btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Eliminar', estate, method: :delete, data: { confirm: 'Estas seguro de querer eliminar este Predio?' }, class:"btn btn-danger  btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Predio', new_estate_path, class:"btn btn-secondary btn-sm" %>
