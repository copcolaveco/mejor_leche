


<div class="form-formulario">
  <h3 class="titulos form-titulo">Editar mi perfil</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <% f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
      </div><br/>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <% f.label :password %><i>(déjelo en blanco si no quiere cambiarlo)</i><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "password", class:"form-control", placeholder:"Contraseña" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field form-group">
        <% f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "password_confirmation", class:"form-control", placeholder:"Confirmar Contraseña" %>
      </div><br/>

      <div class="field form-group">
       <i>(necesitamos su contraseña actual para confirmar sus cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder:"Contraseña actual" %>
      </div><br/> 

      <% if current_user.user_type_id == 2 %>
        <br/>
        <div class="field form-group">
          <%= f.label 'Tipo de Técnico' %>
          <%= collection_select(:user, :secondary_user_type_id, SecondaryUserType.where(user_type_id: 2), :id, :name) %>
        </div>
      <% end %>

      <div class="field form-group">
        <%= f.label 'Tipo de usuario' %><br />
        <%= f.text_field :user_type_id, autocomplete: @user_type.typename, class:"form-control", :readonly => true %>
      </div><br/>

      <div class="field form-group">
        <%= f.label "Nombre" %><br />
        <%= f.text_field :username, autocomplete: "username", class:"form-control"  %>
      </div><br/>

      <div class="field form-group">
        <%= f.label 'Cedula' %>
        <%= f.text_field :identification_document, class:"form-control"%>
      </div><br/>

      <div class="field form-group">
        <%= f.label "Nombre de la empresa" %><br />
        <%= f.text_field :business_name, autocomplete: "business_name", class:"form-control"%>
      </div><br/>

      <div class="field form-group">
        <%= f.label :rut %><br />
        <%= f.text_field :rut, autocomplete: "rut", class:"form-control"%>
      </div><br/>

      <div class="field form-group">
        <%= f.label "Direcciòn" %><br />
        <%= f.text_field :address, autocomplete: "address", class:"form-control"%>
      </div><br/>

      <div class="field form-group">
        <%= f.label "Telefono de linea" %><br />
        <%= f.text_field :phone_one, autocomplete: "phone_one", class:"form-control"%>
      </div><br/>

      <div class="field form-group">
        <%= f.label "Celular" %><br />
        <%= f.text_field :phone_two, autocomplete: "phone_two", class:"form-control"%>
      </div><br/>

      <div class="field form-group">
        <%= f.label "Ciudad" %><br />
        <%= f.text_field :location, autocomplete: "location", class:"form-control"%>
      </div><br/>

      <div class="field form-group">
        <%= f.label "Codigo postal" %><br />
        <%= f.text_field :invoice_postal_code, autocomplete: "invoice_postal_code", class:"form-control"%>
      </div><br/>

      <div class="actions">
        <%= f.submit "Editar", class:"btn", data: { disable_with: "Guardando..." } %>
        <%= link_to "Atras", :back , class:"btn"%>
      </div>
    <% end %><br/>

    <h4>Cancelar mi cuenta?</h4>

    <p><%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Si usted elimina esta cuenta estará eliminando todas sus planillas y predios previamente creados, como también las mismas creadas por los técnicos que tenga asociado, ¿Desea continuar?" }, method: :delete, class:"btn"%>
    </p>
</div>



