<br/>
<div class="card">
  <div class="card-header">
    <h5 class="modal-title text-primary">Registrarse</h5>
  </div>
  <div class="card-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field"><br />
    <%= f.label 'Email' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"ejemplo@ejemplo.com" %>
  </div><br/>

  <div class="field">
    <%= f.label 'Contraseña' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> Caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"******" %>
  </div>

  <div class="field"><br />
    <%= f.label 'Confirmar Contraseña' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"******" %>
  </div>

  <div class="form-group my-3">
    <%= f.label 'Tipo de Usuario' %>
    <%= collection_select(:user, :user_type_id, UserType.all.order(:typename), :id, :typename) %>
  </div>

  <div class="form-group my-3">
    <%= f.label 'Tipo de Usuario' %>
    <%= collection_select(:user, :user_type_id, SecondaryUserType.all.order(:name), :id, :name) %>
  </div>

  <div class="field"><br/>
    <%= f.label 'Nombre completo' %>
    <%= f.text_field :username, autofocus: true, class:"form-control"%>
  </div>

  <div class="field"><br />
    <%= f.text_field :business_name, autofocus: true, class:"form-control", placeholder:"Nombre de la empresa"%>
  </div>

  <div class="field"><br />
    <%= f.text_field :rut, autofocus: true, class:"form-control", placeholder:"RUT"%>
  </div>

  <div class="field"><br />
    <%= f.text_field :address, autofocus: true, class:"form-control", placeholder:"Direcciòn"%>
  </div>

  <div class="field"><br />
    <%= f.text_field :phone_one, autofocus: true, class:"form-control", placeholder:"Telefono"%>
  </div>

  <div class="field"><br />
    <%= f.text_field :phone_two, autofocus: true, class:"form-control", placeholder:"Celular"%>
  </div>

  <div class="field"><br />
    <%= f.text_field :location, autofocus: true, class:"form-control", placeholder:"Ciudad"%>
  </div>

  <!-- <div class="field"><br />
    <%= f.text_field :department, autofocus: true, class:"form-control", placeholder:"Departamento"%>
  </div> -->

  <div class="form-group my-3">
    <%= f.label 'Departamento' %>
    <%= collection_select(:user, :department_id, Department.all.order(:name), :id, :name) %>
  </div>

  <div class="field"><br />
    <%= f.text_field :invoice_postal_code, autofocus: true, class:"form-control", placeholder:"Codigo Postal"%>
  </div>

  

    <div class="actions">
      <%= f.submit "Registrase", class: 'btn btn-primary'%>
    </div>
  <% end %>

<!--   <%= render "devise/shared/links" %> -->
  </div>
</div>
