
<%= render 'form', has_estate: @has_estate %>

<br>
<h1>Asociaciones del cliente - <%= current_user.username %></h1>
 
<table class="table table table-hover table table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Tecnico</th>
      <th>Predio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @has_estates.each do |has_estate| %>
      <tr>
      	<% if has_estate.user != current_user %>
        <td><%= has_estate.user.username %></td>
        <td><%= has_estate.estate.name %></td>
        <td><%= link_to 'Eliminar', has_estate, method: :delete, data: { confirm: 'Estas seguro de querer eliminar esta AsociaciÃ³n?' }, class:"btn btn-danger btn-sm" %></td>
      	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Volver', estates_url, class:"btn btn-secondary btn-sm" %>